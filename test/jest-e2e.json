{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleDirectories": ["node_modules", "src"],
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.spec.json"
    }
  }
}